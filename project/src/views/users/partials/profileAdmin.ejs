<section class="profile">
    <h2>Mis Datos</h2>
    <% let { id, nombre, apellido, email, calle, calleNumero, provincia, imagen, codigoPostal, piso, departamento } = userData %>
    <span>
        <img class="perfil" src="<%= imagen %>" alt="<%= nombre.slice(0,1).toUpperCase()+apellido.slice(0,1).toUpperCase() %>"/>
    </span>
    <span>
        <div>
            <b>ID:</b> 
            <t id="userID"><%= id %></t>
        </div>
        <p><b>Nombre:</b> <%= nombre %>, <%= apellido %></p>
        <p><b>email:</b> <%= email %></p>
        <p><b>Provincia:</b> <%= provincia %></p>
        <p><b>Domicilio:</b> <%= calle %> <%= calleNumero %> </p>
        <% if (piso) { %>
            <p><b>Piso:</b> <%= piso %></p>
        <% } %>
        <% if (departamento) { %>
            <p><b>Departamento:</b> <%= departamento %> </p>
        <% } %>
        <p><b>Codigo Postal:</b> <%= codigoPostal %></p>
    </span>
    
</section>
