<section class="payments productsAdmin">
    <h2>Mis Productos</h2>
    <span>
        <button class="create"><a href="/products/create">Crear Producto</a></button>
        <button id="category" class="create">Crear Categoria</button>
    </span>
    <section class="pagination">
        <span><a class="arrow-prev1 arrow-cards"></a></span>
        <% for (let p = 1; p <= Math.ceil(productos.length/10); p++ ) { %>
            <span class="<%= p == 1? "currentPage" : "" %>"><a id="page"><%= p %></a></span>
        <% } %>
        <span><a class="arrow-next1 arrow-cards"></a></span>
    </section>
    <span class="header">
        <p>imagen</p>
        <p class="name">Nombre</p>
        <p class="category">categoria</p>
        <p class="color">Colores</p>
        <p class="price">Precio</p>
        <p class="stock">Stock</p>
        <p class="action">Accion</p>
    </span>
<% productos.slice(0,10).forEach((producto) => { %>
    <%- include('./card.ejs', {producto}) %>
<% }) %>
<small id="paginado">pagina <b id="currentPage">1</b> de <b><%= Math.ceil(productos.length/10) %></b> mostrando 10 elementos por pagina</small>
    

</section>
